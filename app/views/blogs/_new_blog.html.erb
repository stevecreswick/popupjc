
<%= form_for @blog do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :header_image %>:
  <%= f.text_field :header_image %><br />

  <%= f.label :tagline %>:
  <%= f.text_field :tagline %><br />

  <%= f.label :message %>:
  <%= f.cktext_area :message %><br />

  <%= f.label :country %>:
  <%= f.text_field :country %><br />

  <%= f.label :url_model %>:
  <%= f.text_field :url_model %><br />

  <%= f.submit %>
<% end %>
